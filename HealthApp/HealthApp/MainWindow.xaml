<Window
    x:Class="HealthApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HealthApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HealthApp"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <!--  Sidebar using UniformGrid  -->
        <UniformGrid
            Width="200"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Background="#FF1E1E1E"
            Columns="1"
            Rows="6">

            <UniformGrid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FF2D2D30" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontSize" Value="18" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Cursor" Value="Hand" />
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="Padding" Value="20,0" />
                    <Setter Property="Margin" Value="1,1,1,0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF3E3E42" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FF505053" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </UniformGrid.Resources>

            <!--  Buttons  -->
            <Button
                Name="TrackerPaneButton"
                Click="TrackerPaneButton_Click"
                Content="🍂  Workout Tracker" />
            <Button
                Name="DataViewPaneButton"
                Click="DataViewPaneButton_Click"
                Content="📅  Data View" />
            <Button
                Name="FoodReferencePaneButton"
                Click="FoodReferencePaneButton_Click"
                Content="🍊  Food Reference" />
            <Button
                Name="TimerPaneButton"
                Click="TimerPaneButton_Click"
                Content="⏲️  Stopwatch" />
            <Button
                Name="SettingsPaneButton"
                Click="SettingsPaneButton_Click"
                Content="⚙️  Settings" />
            <Button
                Name="ExitButton"
                Click="ExitButton_Click"
                Content="👋  Exit" />
        </UniformGrid>

        <!--  Main Content  -->
        <Grid x:Name="MainContent" Margin="200,0,0,0">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/default_bg.jpg" />
            </Grid.Background>
            <ContentControl Content="{Binding CurrentPane}" />
        </Grid>
    </Grid>
</Window>
