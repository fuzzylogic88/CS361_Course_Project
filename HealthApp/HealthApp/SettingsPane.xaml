<UserControl
    x:Class="HealthApp.SettingsPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HealthApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Orientation="Horizontal">
        <Border
            Margin="5,5,5,2.5"
            Padding="5"
            CornerRadius="10">
            <Border.Background>
                <SolidColorBrush Opacity="0.8" Color="Azure" />
            </Border.Background>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <TextBlock
                    Height="40"
                    Margin="4,4,0,4"
                    FontSize="24"
                    Text="Download new background image"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </Grid>
        </Border>
        <Button
            x:Name="ImageSelectButton"
            Width="64"
            Height="64"
            Margin="4,4,0,0"
            HorizontalAlignment="Center"
            Click="ImageSelectButton_Click">
            <Image Source="/Assets/image.png" />
        </Button>
    </StackPanel>
</UserControl>
