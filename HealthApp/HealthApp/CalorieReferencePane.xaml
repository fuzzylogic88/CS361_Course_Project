<UserControl
    x:Class="HealthApp.CalorieReferencePane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HealthApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:HealthApp.ViewModels"
    xmlns:vm="clr-namespace:HealthApp.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    
    <Grid>
        <DockPanel
            Margin="5"
            VerticalAlignment="Top"
            LastChildFill="False">
            <TextBox
                x:Name="usernameTextBox"
                Width="300"
                Height="24"
                Margin="0,0,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource placeHolderTextBox}"
                Tag="Search for a food in list" />
            <TextBlock ></TextBlock>
            <ComboBox Name="userChoiceComboBox" DockPanel.Dock="Right" Width="200" Height="25" VerticalAlignment="Center" Text="Cate"></ComboBox>
        </DockPanel>
        <local:FoodListControl x:Name="foodList" />
    </Grid>
</UserControl>