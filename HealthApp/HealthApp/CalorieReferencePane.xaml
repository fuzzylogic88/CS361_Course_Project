<UserControl
    x:Class="HealthApp.CalorieReferencePane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HealthApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:HealthApp.ViewModels"
    xmlns:vm="clr-namespace:HealthApp.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel
            Grid.Row="0"
            Margin="5"
            VerticalAlignment="Top"
            LastChildFill="False">
            <TextBox
                x:Name="searchTextBox"
                Width="300"
                Height="30"
                Margin="0,0,0,0"
                VerticalAlignment="Center"
                FontSize="18"
                Style="{StaticResource placeHolderTextBox}"
                Tag="Search for a food in list" />
            <TextBlock />
            <Button
                x:Name="searchButton"
                Width="32"
                Height="32"
                Margin="5,0,0,0"
                HorizontalAlignment="Center"
                Click="SearchButton_Click">
                <Image Source="/Assets/searchIcon.png" />
            </Button>
            <Button
                x:Name="undoButton"
                Width="32"
                Height="32"
                Margin="5,0,0,0"
                HorizontalAlignment="Center"
                Click="UndoButton_Click">
                <Image Source="/Assets/undoIcon.png" />
            </Button>
            <ComboBox
                Name="userChoiceComboBox"
                Width="200"
                Height="30"
                VerticalAlignment="Center"
                DockPanel.Dock="Right"
                FontSize="18"
                SelectionChanged="foodComboBox_SelectionChanged"
                Text="Cate" />
        </DockPanel>
        <ScrollViewer
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <local:FoodListControl x:Name="foodList" />
        </ScrollViewer>
    </Grid>
</UserControl>