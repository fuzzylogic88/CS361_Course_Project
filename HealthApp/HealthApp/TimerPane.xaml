<UserControl
    x:Class="HealthApp.TimerPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HealthApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>

        <StackPanel
            x:Name="timerSP"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical"
            TextElement.FontSize="14">
            <Image
                Width="120"
                Height="120"
                Margin="0,0,0,10"
                VerticalAlignment="Top"
                Source="/Assets/timerIcon.png" />

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                <Border
                    Name="timerBorder"
                    Width="200"
                    Height="60"
                    Padding="0"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="12">
                    <TextBlock
                        x:Name="timerTextBlock"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        FontSize="40"
                        Text="00:00:00"
                        TextAlignment="Center" />
                </Border>
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                    <Button
                        x:Name="PauseButton"
                        Width="32"
                        Height="32"
                        Margin="4,2,0,0"
                        HorizontalAlignment="Center"
                        Click="PauseButton_Click">
                        <Image Source="/Assets/pauseIcon.png" />
                    </Button>
                    <Button
                        x:Name="PlayButton"
                        Width="32"
                        Height="32"
                        Margin="4,2,0,0"
                        HorizontalAlignment="Center"
                        Click="PlayButton_Click">
                        <Image Source="/Assets/playIcon.png" />
                    </Button>
                </StackPanel>
            </StackPanel>

            <StackPanel
                Margin="0,5,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBox
                    x:Name="newTimeTextBox"
                    Width="150"
                    Height="35"
                    Margin="0,0,4,0"
                    VerticalAlignment="Bottom"
                    FontSize="24"
                    Style="{StaticResource placeHolderTextBox}"
                    Tag="00:00:00"
                    TextAlignment="Center" />
                <Button
                    Width="85"
                    Height="30"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    Content="Set"
                    FontSize="20" />
                <Button
                    Name="ResetButton"
                    Width="85"
                    Height="30"
                    Margin="2,0,0,0"
                    HorizontalAlignment="Center"
                    Click="ResetButton_Click"
                    Content="Reset"
                    FontSize="20" />
                <Button
                    x:Name="UndoResetButton"
                    Width="32"
                    Height="32"
                    Margin="2,0,0,0"
                    HorizontalAlignment="Center"
                    Click="UndoResetButton_Click">
                    <Image Source="/Assets/undoIcon.png" />
                </Button>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" />
        </StackPanel>
    </Grid>
</UserControl>
