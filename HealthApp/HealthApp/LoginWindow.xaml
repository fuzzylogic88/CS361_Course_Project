<Window
    x:Class="HealthApp.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HealthApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:HealthApp.ViewModels"
    xmlns:vm="clr-namespace:HealthApp.ViewModels"
    Title="HealthApp - Login"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    Closing="Window_Closing"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/default_bg.jpg" />
        </Grid.Background>

        <!--  top row guest button SP  -->
        <Grid VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Width="160"
                Height="30"
                Margin="0,5,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="White"
                Click="GuestLoginButton_Click"
                Content="Try as a guest!"
                FontSize="16" />
        </Grid>

        <!--  keep everything centered in ui  -->
        <StackPanel
            x:Name="loginElementSP"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical"
            TextElement.FontSize="14">
            <Image
                Width="120"
                Height="120"
                Margin="0,0,0,10"
                VerticalAlignment="Top"
                Source="/Assets/appicon.png" />

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Text="Log in to HealthApp" />
            <TextBox
                x:Name="usernameTextBox"
                Width="175"
                Height="24"
                Margin="0,8,0,2"
                VerticalAlignment="Bottom"
                Style="{StaticResource placeHolderTextBox}"
                Tag="Username" />
            <PasswordBox
                x:Name="passwordTextBox"
                Width="175"
                Height="24"
                Margin="0,2,0,5"
                VerticalAlignment="Bottom"
                PasswordChar="*"
                Tag="Password" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Width="85"
                    Height="25"
                    Margin="0,0,2,0"
                    HorizontalAlignment="Center"
                    Click="LoginButton_Click"
                    Content="Login" />
                <Button
                    Width="85"
                    Height="25"
                    Margin="2,0,0,0"
                    HorizontalAlignment="Center"
                    Click="RegisterButton_Click"
                    Content="Register" />
            </StackPanel>

        </StackPanel>

        <!--  bottom stackpanel, for ver and user msg  -->
        <DockPanel
            Margin="5"
            VerticalAlignment="Bottom"
            LastChildFill="False">
            <Label
                x:Name="versionTextLabel"
                Margin="5,0,0,5"
                Content="VersionText"
                DockPanel.Dock="Left"
                FontSize="14"
                Foreground="White" />
            <Label
                x:Name="userMessageTextLabel"
                Margin="0,0,0,0"
                Content="{Binding UserMessageLabelText}"
                DockPanel.Dock="Right"
                FontSize="14"
                Foreground="White" />
        </DockPanel>
    </Grid>
</Window>
