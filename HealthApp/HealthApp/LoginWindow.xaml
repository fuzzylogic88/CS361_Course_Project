<Window x:Class="HealthApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthApp"
        mc:Ignorable="d"
        Title="HealthApp - Login" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/default_bg.jpg"/>
        </Grid.Background>
        
        <!-- keep everything centered in ui-->
        <StackPanel x:Name="loginElementSP" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Width="120" Height="120" Source="/Assets/appicon.png" VerticalAlignment="Top" Margin="0,0,0,0"/>

            <TextBlock Text="Log in to HealthApp"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="24"/>
            <TextBox x:Name="usernameTextBox" Style="{StaticResource placeHolder}" Tag="Username" Height="25" Width="175" VerticalAlignment="Bottom" Margin="0,0,0,0"></TextBox>
            <TextBox x:Name="passwordTextBox" Style="{StaticResource placeHolder}" Tag="Password" Height="25" Width="175" VerticalAlignment="Bottom" Margin="0,0,0,0"></TextBox>
        </StackPanel>
    </Grid>
</Window>
